				.catalog-item__char-column
					.catalog-item__char-item
						.catalog-item__char-icon
							span.i-char-type
						.catalog-item__char-text
							.catalog-item__char-title
								| Тип постройки
							.catalog-item__char-desc
								| Дачный дом
					.catalog-item__char-item
						.catalog-item__char-icon
